@model EatEvals.Models.Review

@{
    ViewData["Title"] = "Delete";
}

<div class="container m-5 delete-box">
    <div class="container mx-5">
        <div class="row justify-content-center">
            <!-- Image Column on the Left -->
            <div class="col-md-4">
                <img src="@Url.Action("GetImage", new { id = Model.Id })" alt="Review Image" class="img-fluid mb-3">
                <!-- Add more images if necessary -->
                <!-- Example: <img src="@Url.Content("~/path/to/other-image.jpg")" alt="Additional Image" class="img-fluid mb-3"> -->
            </div>

            <!-- Form Content Column on the Right -->
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-header">
                        <h4 class="card-title">Delete Review</h4>
                    </div>
                    <div class="card-body">
                        <h3>Are you sure you want to delete this Review?</h3>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-4">Restaurant</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Restaurant)</dd>
                            <dt class="col-sm-4">Food</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Food)</dd>
                            <dt class="col-sm-4">Price</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Price)</dd>
                            <dt class="col-sm-4">Score</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Score)</dd>
                            <dt class="col-sm-4">Date</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Date)</dd>
                        </dl>
                    </div>
                    <div class="card-footer ">
                        <form asp-action="Delete" method="post" class="d-inline">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Delete" class="btn btn-danger delete-btn" />
                        </form>
                        <a asp-action="Index" class="btn btn-primary back-to-btn">Back to list</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
