@model EatEvals.Models.Review

@{
    ViewData["Title"] = "Edit";
}
@using Microsoft.AspNetCore.Identity
@using EatEvals.Areas.Identity.Data

@inject SignInManager<RestaurantReviewUser> SignInManager
@inject UserManager<RestaurantReviewUser> UserManager

@* Banner Post *@
<div class="container-fluid">
    <div class="container banner-box">
        <div class="banner text-white">
            <div class="row align-items-center">
                <div class="col-md-12">
                    <h1>Special Offer!</h1>
                    <p>Enjoy an exclusive 30% discount on all our products this month!</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container top_text d-flex mt-5" style="align-items: center">
    <div class="col-md-6">
        <a asp-action="Index" class="btn btn-link" style="color: #000000; font-style: italic; font-size: 1.2rem;">Back to List</a>
    </div>
    <div class="col-md-6">
        <h1 class="mb-4">Edit Your Review</h1>
    </div>
</div>

<div class="container my-4 edit-box">
    <div class="row">
        <!-- Static Image Column -->
        <div class="col-md-6">
            <img src="https://images.unsplash.com/photo-1482049016688-2d3e1b311543?q=80&w=1910&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"  alt="Static Image" class="img-half" />

        </div>

        <!-- Form Column -->
        <div class="col-md-6 edit-container">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <!-- Increase input sizes by adding form-control-lg class -->
                <div class="mb-4">
                    <label asp-for="Restaurant" class="form-label">Restaurant Name</label>
                    <input asp-for="Restaurant" class="form-control form-control-lg" />
                    <span asp-validation-for="Restaurant" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Food" class="form-label">Food Name</label>
                    <input asp-for="Food" class="form-control form-control-lg" /> 
                    <span asp-validation-for="Food" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Price" class="form-label">Price</label>
                    <input asp-for="Price" class="form-control form-control-lg" /> 
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Score" class="form-label">Score <small>(1 to 5)</small></label>
                    <input asp-for="Score" class="form-control form-control-lg" /> 
                    <span asp-validation-for="Score" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Date" class="form-label">Date of Review</label>
                    <input asp-for="Date" class="form-control form-control-lg" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>

                <div class="mb-4 edit-img">
                    <label for="Photo" class="form-label">Upload Image</label>
                    <img src="@Url.Action("GetImage", new { id = Model.Id })" alt="Image" height="50" class="d-block mb-2" />
                    <input type="file" name="Photo" id="Photo" class="form-control" />
                </div>

                <div class="mb-4">
                    <input type="submit" value="Save your Changes" class="btn btn-primary btn-lg search-btn" />
                </div>
            </form>
        </div>
    </div>
</div>






@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
